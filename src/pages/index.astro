---
import BaseLayout from "../layouts/BaseLayout.astro";
const categories = [
  { slug: "finance", label: "Finance" },
  { slug: "health", label: "Health" },
  { slug: "math", label: "Math" },
  { slug: "conversions", label: "Conversions" },
  { slug: "technology", label: "Technology" },
  { slug: "date-time", label: "Date & Time" },
  { slug: "home-diy", label: "Home & DIY" },
  { slug: "education", label: "Education" },
  { slug: "science", label: "Science" },
  { slug: "everyday", label: "Everyday" },
  { slug: "all", label: "All Calculators" }
];
---
<BaseLayout title="Niche Calculator Network" description="Free calculators you can trust.">
  <section>
    <h1 class="text-3xl font-bold">Free online calculators</h1>
    <p class="mt-3 text-lg text-slate-600">Pick a category to get started. Clean, accurate and lightweight.</p>
  </section>

  <section class="mt-10 grid gap-4 md:grid-cols-2 lg:grid-cols-3">
    {categories.map((c) => (
      <a href={`/${c.slug}`} class="group block rounded-xl border border-slate-200 p-6 hover:border-blue-500 hover:shadow-sm transition">
        <div class="text-sm uppercase tracking-wide text-slate-500">Category</div>
        <div class="mt-2 text-2xl font-semibold text-slate-900 group-hover:text-blue-600">{c.label}</div>
        <div class="mt-2 text-slate-500">Open {c.label} calculators</div>
      </a>
    ))}
  </section>
</BaseLayout>


---
import Base from '../layouts/BaseLayout.astro';
const categories = [
  { slug:'finance', title:'Finance', desc:'Loans, interest, ROI, taxes' },
  { slug:'health', title:'Health', desc:'BMI and body metrics' },
  { slug:'conversions', title:'Conversions', desc:'Units, currency, temperature' },
  { slug:'math', title:'Math', desc:'Geometry & algebra' },
  { slug:'technology', title:'Technology', desc:'Bits, storage & more' },
  { slug:'date-time', title:'Date & Time', desc:'Durations and schedules' },
  { slug:'home-diy', title:'Home & DIY', desc:'Everyday helpers' },
  { slug:'other', title:'Other', desc:'Miscellaneous tools' }
];
---
<Base>
  <section class="hero">
    <h1>Smart &amp; Fast<br/>Calculators</h1>
    <p>Free online calculators for finance, health, math, conversions, and more.</p>
  </section>
  <section class="grid" aria-label="Categories">
    {categories.map(c => (
      <a class="card" href={`/categories/${c.slug}/`}>
        <h3>{c.title}</h3>
        <p>{c.desc}</p>
      </a>
    ))}
  </section>
  <section style="margin-top:24px">
    <div class="card" aria-label="Ad placeholder" style="min-height:120px;display:flex;align-items:center;justify-content:center">
      <span class="muted">Ad — 728 × 90 reserved</span>
    </div>
  </section>
</Base>

---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Home">
  <main class="flex flex-col items-center justify-center min-h-screen bg-gray-50 text-gray-900">
    <section class="text-center py-16">
      <h1 class="text-4xl font-bold mb-4">Welcome to Calculator Network</h1>
      <p class="text-lg text-gray-600 mb-8">Choose a category to start</p>
      <nav class="grid grid-cols-2 md:grid-cols-3 gap-6 w-full max-w-4xl">
        <a href="/finance" class="bg-white shadow p-6 rounded-lg hover:bg-blue-50 text-xl font-semibold">Finance</a>
        <a href="/health" class="bg-white shadow p-6 rounded-lg hover:bg-blue-50 text-xl font-semibold">Health</a>
        <a href="/math" class="bg-white shadow p-6 rounded-lg hover:bg-blue-50 text-xl font-semibold">Math</a>
        <a href="/conversions" class="bg-white shadow p-6 rounded-lg hover:bg-blue-50 text-xl font-semibold">Conversions</a>
        <a href="/technology" class="bg-white shadow p-6 rounded-lg hover:bg-blue-50 text-xl font-semibold">Technology</a>
        <a href="/date-time" class="bg-white shadow p-6 rounded-lg hover:bg-blue-50 text-xl font-semibold">Date & Time</a>
        <a href="/home-diy" class="bg-white shadow p-6 rounded-lg hover:bg-blue-50 text-xl font-semibold">Home & DIY</a>
        <a href="/education" class="bg-white shadow p-6 rounded-lg hover:bg-blue-50 text-xl font-semibold">Education</a>
        <a href="/science" class="bg-white shadow p-6 rounded-lg hover:bg-blue-50 text-xl font-semibold">Science</a>
        <a href="/everyday" class="bg-white shadow p-6 rounded-lg hover:bg-blue-50 text-xl font-semibold">Everyday</a>
        <a href="/all" class="bg-white shadow p-6 rounded-lg hover:bg-blue-50 text-xl font-semibold">All Calculators</a>
      </nav>
    </section>
  </main>
</BaseLayout>

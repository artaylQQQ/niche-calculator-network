---
import BaseLayout from '../layouts/BaseLayout.astro';
const cards = [
  { href: '/categories/finance', title: 'Finance', desc: 'Loans, interest, ROI, taxes' },
  { href: '/categories/health', title: 'Health', desc: 'BMI, calories, heart rate' },
  { href: '/categories/math', title: 'Math', desc: 'Percentages, geometry, algebra' },
  { href: '/categories/conversions', title: 'Conversions', desc: 'Units, currency, temperature' },
  { href: '/categories/technology', title: 'Technology', desc: 'Storage, bandwidth, time' },
  { href: '/categories/date-time', title: 'Date & Time', desc: 'Durations, schedules, timezones' },
  { href: '/categories/home-diy', title: 'Home & DIY', desc: 'Materials, paint, gardening' },
  { href: '/categories/other', title: 'Other', desc: 'Everyday quick tools' }
];
---
<BaseLayout title="Smart & Fast Calculators" description="A large collection of simple, accurate calculators for daily tasks.">
  <section class="hero" style="padding: 12px 0 6px 0;">
    <h1 style="margin:0 0 6px 0;">Smart & Fast Calculators</h1>
    <p style="margin:0 0 12px 0;color:var(--muted)">Solve everyday calculations quickly, with clean interfaces and examples.</p>
  </section>

  <section class="card-grid">
    {cards.map(c => (
      <a class="card" href={c.href}>
        <h3>{c.title}</h3>
        <p style="margin:0;color:var(--muted)}">{c.desc}</p>
      </a>
    ))}
  </section>

  <section style="margin-top:18px;background:var(--card);border:1px solid var(--border);border-radius:12px;padding:16px;text-align:center">
    <strong>Ad — 728 × 90 reserved</strong>
  </section>
</BaseLayout>

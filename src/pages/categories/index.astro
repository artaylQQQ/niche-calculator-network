---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AdBanner from '../../components/AdBanner.astro';

/*
 * Provide the same normalised list of categories as the home page.  Each
 * definition includes a URL slug, title, short description and the name of
 * an SVG icon stored under `/public/icons/`.  Where no dedicated icon
 * exists we reuse a related graphic (see comments in index.astro for
 * details).
 */
const CATEGORIES = [
  { slug: 'finance',     title: 'Finance',     desc: 'Loans, interest, ROI, taxes',          icon: 'finance' },
  { slug: 'health',      title: 'Health',      desc: 'BMI and body metrics',                 icon: 'health' },
  { slug: 'conversions', title: 'Conversions', desc: 'Unit and currency conversions',         icon: 'conversions' },
  { slug: 'math',        title: 'Math',        desc: 'Geometry, algebra and statistics',      icon: 'geometry' },
  { slug: 'technology',  title: 'Technology',  desc: 'Computing and tech topics',            icon: 'algebra' },
  { slug: 'date-time',   title: 'Date & Time', desc: 'Schedules and durations',              icon: 'time-date' },
  { slug: 'home-diy',    title: 'Home & DIY',  desc: 'Household projects and DIY',           icon: 'business' },
  { slug: 'other',       title: 'Everyday & Misc',       desc: 'Everyday & misc calculators',          icon: 'statistics' }
];
---
<BaseLayout title="Categories" description="Browse all calculator categories.">
  <section class="container mx-auto max-w-5xl px-4 pt-10">
    <h1 class="text-3xl sm:text-4xl font-bold" style="color: var(--heading)">Categories</h1>
    <p class="mt-2" style="color: var(--muted)">Browse all our calculators by topic.</p>
  </section>

  <AdBanner />

  <section class="container mx-auto max-w-5xl px-4 py-8">
    <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {CATEGORIES.map((cat) => (
        <li>
          <a href={`/categories/${cat.slug}/`} class="card group">
            <div class="flex items-start gap-3">
              {/**
               * Provide meaningful alt text for icons to improve accessibility.
               */}
              <img
                src={`/icons/${cat.icon}.svg`}
                width="28"
                height="28"
                alt={`${cat.title} icon`}
                loading="lazy"
              />
              <div>
                <h3 class="text-lg font-semibold text-[var(--heading)] group-hover:underline transition-colors">{cat.title}</h3>
                <p class="text-sm text-[var(--muted)]">{cat.desc}</p>
              </div>
            </div>
          </a>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>

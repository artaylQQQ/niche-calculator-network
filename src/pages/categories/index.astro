---
import BaseLayout from '../../layouts/BaseLayout.astro';
const cats = [
  { slug:'finance', title:'Finance Calculators', desc:'Loans, interest, ROI, taxes' },
  { slug:'health', title:'Health Calculators', desc:'BMI, calories, heart rate' },
  { slug:'math', title:'Math Calculators', desc:'Percentages, geometry, algebra' },
  { slug:'conversions', title:'Conversions Calculators', desc:'Units, currency, temperature' },
  { slug:'technology', title:'Technology Calculators', desc:'Storage, bandwidth, time' },
  { slug:'date-time', title:'Date & Time Calculators', desc:'Durations, schedules, timezones' },
  { slug:'home-diy', title:'Home & DIY Calculators', desc:'Materials, paint, gardening' },
  { slug:'other', title:'Other Calculators', desc:'Everyday quick tools' }
];
---
<BaseLayout title="Categories" description="Browse all calculator categories">
  <ul style="list-style:none;padding:0;display:grid;grid-template-columns:repeat(2,1fr);gap:12px">
    {cats.map(c => (
      <li style="background:var(--card);border:1px solid var(--border);border-radius:12px;padding:12px">
        <a href={`/categories/${c.slug}`} style="text-decoration:none;color:inherit">
          <h3 style="margin:0 0 6px 0">{c.title}</h3>
          <p style="margin:0;color:var(--muted)}">{c.desc}</p>
        </a>
      </li>
    ))}
  </ul>
</BaseLayout>

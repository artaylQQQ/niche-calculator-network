---
const CATEGORIES = [
  { slug: 'finance',     title: 'Finance',       desc: 'Loans, interest, ROI, taxes',          icon: 'finance' },
  { slug: 'health',      title: 'Health',        desc: 'BMI and body metrics',                 icon: 'health' },
  { slug: 'conversions', title: 'Conversions',   desc: 'Units, currency, temperature',         icon: 'conversions' },
  { slug: 'geometry',    title: 'Geometry',      desc: 'Areas, perimeters, volumes',           icon: 'geometry' },
  { slug: 'algebra',     title: 'Algebra',       desc: 'Proportions, rule of three',           icon: 'algebra' },
  { slug: 'time-date',   title: 'Time & Date',   desc: 'Durations and schedules',              icon: 'time-date' },
  { slug: 'statistics',  title: 'Statistics',    desc: 'Averages and probabilities',           icon: 'statistics' },
  { slug: 'business',    title: 'Business',      desc: 'Pricing, margin, markup',              icon: 'business' }
];
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Smart & Fast Calculators" description="Calculate anything quickly and easily with our collection of online calculators.">
  <section class="hero" aria-labelledby="hero-heading">
    <h1 id="hero-heading">Smart & Fast<br/>Calculators</h1>
    <p>Calculate anything quickly and easily with our collection of online calculators.</p>
  </section>

  <section aria-labelledby="categories-heading" class="section">
    <h2 id="categories-heading" class="sr-only">Categories</h2>
    <ul class="grid">
      {CATEGORIES.map((cat) => (
        <li>
          <a class="card" href={`/categories/${cat.slug}/`} aria-label={`${cat.title} calculators`}>
            <img src={`/icons/${cat.icon}.svg`} width="28" height="28" alt="" aria-hidden="true" loading="lazy" />
            <div>
              <h3>{cat.title}</h3>
              <p>{cat.desc}</p>
            </div>
          </a>
        </li>
      ))}
    </ul>
  </section>

  <div class="section">
    <div class="ad-slot" role="region" aria-label="Advertisement" style="min-height:90px">Ad — 728 × 90 reserved</div>
  </div>
</BaseLayout>

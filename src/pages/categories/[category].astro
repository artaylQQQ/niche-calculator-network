
---
import Base from '../../layouts/BaseLayout.astro';
import calculators from '../../site-data/calculators.json';
const { category } = Astro.params;
const cat = String(category);
const title = `${cat} Calculators`;
const list = calculators.filter(c=>c.category === cat);
---
<Base title={`${title} â€” CalcSimpler`} description={`Explore calculators in this category.`}>
  <h1>{title}</h1>
  <h2>Calculators list</h2>
  <ul>
    {list.map(item => (
      <li><a href={`/calculators/${item.slug}/`}>{item.title} <span class="muted"> {item.description}</span></a></li>
    ))}
  </ul>
</Base>

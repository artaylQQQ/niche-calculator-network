---
import BaseLayout from "../layouts/BaseLayout.astro";
import AdBanner from "../components/AdBanner.astro";
const slug = "other";
const title = "Everyday & Misc Calculators";
const modules = import.meta.glob("../pages/calculators/*.mdx", { eager: true });
const items = Object.values(modules).map((m) => ({ url: m.url, fm: m.frontmatter || {} }));
const list = items.filter(i => (i.fm.cluster || "").toLowerCase() === slug);
---
<BaseLayout title={title}>
    <main class="container mx-auto px-4 py-10">
      <h1 class="text-3xl font-bold">{title}</h1>
      <AdBanner />
      {list.length ? (
      <div class="grid gap-4 mt-6 sm:grid-cols-2 lg:grid-cols-3">
        {list.map((it) => (
          <a href={it.url} class="card">
            <div class="text-sm text-[var(--muted)]">{it.fm.cluster || ''}</div>
            <div class="label text-lg font-semibold text-[var(--ink)]">{it.fm.title || it.url.replace('/calculators/','').replace('.mdx','')}</div>
            <div class="text-[var(--muted)]">{it.fm.description || ''}</div>
          </a>
        ))}
      </div>
    ) : (
      <p class="text-slate-500"><em>No calculators available in this category.</em></p>
    )}
  </main>
</BaseLayout>

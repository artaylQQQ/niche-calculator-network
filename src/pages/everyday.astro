---
import BaseLayout from "../layouts/BaseLayout.astro";
const slug = "everyday";
const title = "Everyday Calculators";
const modules = import.meta.glob("../pages/calculators/*.mdx", { eager: true });
const items = Object.values(modules).map((m) => ({ url: m.url, fm: m.frontmatter || {} }));
const list = items.filter(i => (i.fm.cluster || "").toLowerCase() === "everyday");
---
<BaseLayout title={title}>
  <main class="wrap" style="padding:24px 0 40px">
    <h1>{title}</h1>
    {/* ad-slot: top */}
    {list.length ? (
      <div class="grid" style="margin-top:16px">
        {list.map((it) => (
          <article class="card">
            <div class="pill">{it.fm.cluster}</div>
            <h3 style="margin:.6rem 0"><a href={it.url}>{it.fm.title || it.url.replace('/calculators/','').replace('.mdx','')}</a></h3>
            <p style="margin:0;color:var(--muted)">{it.fm.description || ""}</p>
          </article>
        ))}
      </div>
    ) : (
      <p style="color:var(--muted)"><em>No calculators available in this category.</em></p>
    )}
  </main>
</BaseLayout>

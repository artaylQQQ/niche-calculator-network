---
import BaseLayout from "../layouts/BaseLayout.astro";
const pages = await Astro.glob('./calculators/*.mdx');
const items = pages.map(p => ({ url: p.url, title: p.frontmatter?.title ?? 'Calculator' }));
---
<BaseLayout title="All calculators" description="Browse all calculators.">
  <h1 class="text-3xl font-bold mb-4">All calculators</h1>
  <ul class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
    {items.map((it) => (
      <li class="border rounded-xl p-4 hover:shadow-sm">
        <a href={it.url} class="font-semibold hover:text-blue-600">{it.title}</a>
      </li>
    ))}
  </ul>
</BaseLayout>

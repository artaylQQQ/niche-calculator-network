---
import BaseLayout from "../layouts/BaseLayout.astro";
// This page lists calculators that do not fit into another major category.
// The slug is `other` and it reads all available MDX files, filtering
// calculators whose `cluster` (category) is lower‑cased to `other`.  If no
// calculators are available a placeholder message is shown.
const slug = "other";
const title = "Other Calculators";
const modules = import.meta.glob("../pages/calculators/*.mdx", { eager: true });
const items = Object.values(modules).map((m) => ({ url: m.url, fm: m.frontmatter || {} }));
// Aliases for the Other category.  Includes miscellaneous, everyday and unclassified
// clusters plus education and science topics which were previously separate.
const otherAliases = [
  'other',
  'misc',
  'miscellaneous',
  'everyday',
  'everyday & misc',
  'general',
  'science',
  'education'
];
const list = items.filter((i) =>
  otherAliases.some((v) => (i.fm.cluster || '').toLowerCase().includes(v))
);
---
<BaseLayout title={title} description={`Browse ${slug} calculators`}>
  <section class="hero container mx-auto max-w-5xl px-4">
    <h1 style="color: var(--ink)">{title}</h1>
    <p style="color: var(--muted)">Explore calculators in this category.</p>
  </section>
  {list.length === 0 ? (
    <section class="section"><p>We’re working on new calculators for this category. Meanwhile, explore our other categories <a href="/categories/" class="underline">here</a>.</p></section>
  ) : (
    <section class="section container mx-auto max-w-5xl px-4" aria-labelledby={`list-${slug}`}> 
      <h2 id={`list-${slug}`} class="sr-only">Calculators list</h2>
      <!-- Use a responsive Tailwind grid for consistent card sizes across breakpoints -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {list.map((it) => (
          <div>
            <a class="card" href={it.url}>
              <h3>{it.fm.title || it.url.replace('/calculators/','').replace('.mdx','')}</h3>
              <p>{it.fm.intro || it.fm.description || ''}</p>
            </a>
          </div>
        ))}
      </div>
    </section>
  )}
</BaseLayout>
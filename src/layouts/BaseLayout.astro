---
import "../public/styles/theme.css";
const { title = "CalcSimpler", description = "" } = Astro.props;
const site = Astro.site || "https://calcsimpler.com";
const href = Astro.url || site;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={href} />
    <meta property="og:image" content={`${site}/favicon.svg`} />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body>
    <header class="container flex items-center justify-between py-6">
      <a href="/" class="text-xl font-bold text-slate-800 dark:text-slate-50">
        CalcSimpler
      </a>
      <nav class="space-x-4 text-sm">
        <a href="/categories/">Categories</a>
        <a href="/all">All Calculators</a>
        <a href="/privacy">Privacy</a>
        <a href="/disclaimer">Disclaimer</a>
      </nav>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer class="container" style="padding:24px 0;">
      <div class="links">
        <a href="/">Home</a>
        <a href="/categories/">Categories</a>
        <a href="/all">All Calculators</a>
        <!-- âœ… Corregido: sitemap apunta al archivo correcto -->
        <a href="/sitemap-index.xml">Sitemap</a>
        <a href="/privacy">Privacy</a>
        <a href="/disclaimer">Disclaimer</a>
      </div>
      <p class="muted" style="margin-top:8px;">
        &copy; {new Date().getFullYear()} CalcSimpler. All rights reserved.
      </p>
    </footer>
  </body>
</html>


---
const {
  title = "CalcSimpler — Smart & Fast Calculators",
  description = "Calculate anything quickly and easily with our collection of online calculators.",
  canonical = new URL(Astro.request.url).pathname
} = Astro.props;

const ADSENSE_CLIENT = import.meta.env.PUBLIC_ADSENSE_CLIENT;
const UMAMI_ID = import.meta.env.PUBLIC_UMAMI_ID;
const UMAMI_SRC = import.meta.env.PUBLIC_UMAMI_SRC;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`https://www.calcsimpler.com${canonical}`} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://www.calcsimpler.com${canonical}`} />
    <link rel="stylesheet" href="/src/styles/global.css">
    {UMAMI_ID && UMAMI_SRC && (<script defer src={UMAMI_SRC} data-website-id={UMAMI_ID}></script>)}
    {ADSENSE_CLIENT && (<script async src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${ADSENSE_CLIENT}`} crossorigin="anonymous"></script>)}
  </head>
  <body>
    <header class="navbar">
      <nav class="container" aria-label="Main">
        <a href="/" class="badge" aria-label="Home">CalcSimpler.com</a>
        <span style="margin-left:12px"></span>
        <a href="/categories/finance">Finance</a>
        <a style="margin-left:12px" href="/categories/health">Health</a>
        <a style="margin-left:12px" href="/categories/math">Math</a>
        <a style="margin-left:12px" href="/categories/conversions">Conversions</a>
        <a style="margin-left:12px" href="/categories/technology">Technology</a>
        <a style="margin-left:12px" href="/categories/date-time">Date &amp; Time</a>
        <a style="margin-left:12px" href="/categories/home-diy">Home &amp; DIY</a>
        <a style="margin-left:12px" href="/categories/other">Other</a>
        <a style="margin-left:12px" href="/all">All</a>
      </nav>
    </header>
    <main class="container">
      <slot />
    </main>
    <footer>
      <div class="container">
        <p>© {new Date().getFullYear()} CalcSimpler.com · <a href="/sitemap-index.xml">Sitemap</a> · <a href="/privacy">Privacy</a> · <a href="/disclaimer">Disclaimer</a></p>
      </div>
    </footer>
  </body>
</html>

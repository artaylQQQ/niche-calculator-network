---
import BaseLayout from './BaseLayout.astro';
import AICalculator from '../components/AICalculator.astro';

/**
 * Simplified calculator layout that wraps individual calculator pages with
 * the base site chrome.  All FAQ rendering and structured data are handled
 * within the Calculator component itself.
 */
const { title, description, canonical } = Astro.props;
---
<BaseLayout {title} {description} {canonical}>
  <slot />
  <section class="container mx-auto max-w-5xl px-4">
    <AICalculator />
  </section>
</BaseLayout>

